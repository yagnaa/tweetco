<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tweetco"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="19" />

    <application
        android:name="com.tweetco.TweetCo"
        android:icon="@drawable/icon_main"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.tweetco.activities.LauncherActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.yagnasri.displayingbitmaps.ui.AllInOneActivity"
            android:configChanges="keyboardHidden|orientation"
            android:screenOrientation="sensor" >
        </activity>
        
        <activity
            android:name="com.tweetco.activities.UserProfileFragment"
            android:configChanges="keyboardHidden|orientation"
            android:screenOrientation="sensor" >
        </activity>
        <activity
            android:name="com.tweetco.activities.FTUActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen" >
        </activity>
        <activity
            android:name="com.tweetco.activities.ServiceDirectedLoginFTUActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen" >
        </activity>
        <activity
            android:name="com.tweetco.activities.PostTweetActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" >
        </activity>
        
        
        <provider android:name="com.tweetco.provider.TweetCoProvider" android:authorities="com.tweetco.provider" android:exported="false"></provider>
        
        <provider
            android:name="android.support.v4.content.FileProvider"
            android:authorities="com.tweetco.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true" >
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/files_path" />
        </provider>


    </application>

</manifest>