<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >
    
    <EditText android:id="@+id/tweetContent" android:layout_height="wrap_content" android:layout_width="0dip" android:layout_weight="1" android:hint="What's on your mind?"/>
    <TextView android:id="@+id/charCount" android:layout_height="wrap_content" android:layout_width="wrap_content" android:hint="140"/>
        
        
        </LinearLayout>
        
    <Button android:id="@+id/sendTweetButton" android:text="Send" android:layout_height="wrap_content" android:layout_width="wrap_content"/>
   
</LinearLayout>
